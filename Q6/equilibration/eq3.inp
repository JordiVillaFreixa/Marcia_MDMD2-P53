[MD]
steps                                          1000
temperature                                   150.0
stepsize                                        2.0
bath_coupling                                    10
separate_scaling                                 on
lrf                                              on
shake_all_hydrogens                              on

[cut-offs]
solute_solute                                    10
solvent_solvent                                  10
solute_solvent                                   10
!q_atom                                           99

[sphere]
shell_radius                                   20.0
shell_force                                     0.0

[intervals]
non_bond                                         25
output                                           50

[files]
topology                                  lig_w.top
restart                                     eq2.re
final                                       eq3.re
fep                                         lig.fep

[sequence_restraints]
1 70 0.5 0 1
